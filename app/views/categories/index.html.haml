- content_for :head do
  %meta{:property=>"og:url", :content=>"#{category_listing_url(@category.id, @category.name)}"}
  %meta{:property=>"og:description", :content=>"#{@category.description}"}
  %meta{:property=>"og:title", :content=>"#{@category.name} products"}
  %meta{:property=>"og:site_name", :content=>"Kalakrati"}
  %meta{:property=>"og:image", :content=> "#{asset_url("#{@category.menu_image}")}"}

.container.main-container.headerOffset{"ng-controller"=>"CategoryController", "ng-init" => "triggerProductFetchForCategory('#{category_category_product_page_path(@category.id, 0)}')"}
  = render partial: "breadcrumb"

  .row
    <!--left column-->
    .col-lg-3.col-md-3.col-sm-12
      .panel-group#accordionNo
        = render partial: "taxonomy_listing"
        -#= render partial: "price_filter_panel"
        -#= render partial: "discount_panel"

    = render partial: "product_listing"