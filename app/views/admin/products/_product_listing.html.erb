<div class="row">
<div class="col-lg-12">
  <div class="panel panel-default">
    <div class="panel-heading clearfix">
      <p class="pull-left">
        Product list
      </p>
      <p class="pull-right">
        <a href="" class="btn btn-success">Add product</a>
      </p>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
          <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Code</th>
            <th>Category</th>
            <th>Operation</th>
          </tr>
          </thead>
          <tbody>
          <% @products.each do |product| %>
              <tr>
                <td class="text-center"><img src="<%= asset_path(product.images.first.url) %>" style="max-height:100px;"></td>
                <td><%= product.name %></td>
                <td><%= product.description %></td>
                <td>â‚¹ <%= product.price.amount %></td>
                <td><%= product.code %></td>
                <td><%= category_breadcrumb_for(product.category) %></td>
                <td class="text-center"><a class="btn btn-outline btn-success" href="<%= admin_product_edit_path(product) %>">Edit</a></td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
      <!-- /.table-responsive -->
    </div>
    <!-- /.panel-body -->
  </div>
<!-- /.col-lg-12 -->
</div>
</div>