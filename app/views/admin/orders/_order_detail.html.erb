<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading clearfix">
        <p class="pull-left">
          Order details
          <button type="button" class="btn btn-<%= timeline_node_color_for(@order.state) %> disabled"><%= @order.state.to_s.camelize %></button>
        </p>
            <div class="btn-group pull-right">
              <button type="button" class="<%= @order.state_events.present? ? '': 'disabled'%> btn btn-warning btn-sm dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                Update Order  <span class="caret"></span>
              </button>
              <ul class="dropdown-menu" role="menu">
                <% @order.state_events.each do |name| %>
                <li><a href="<%= admin_order_update_path(@order.id, name) %>"><%= name.to_s.camelize %></a>
                </li>
                <% end %>
              </ul>
            </div>
      </div>
      <!-- /.panel-heading -->
      <%= render partial: "order_section_details" %>
      <!-- /.panel-body -->
      <%= render partial: "order_item_details"%>
    </div>
    <!-- /.col-lg-12 -->
  </div>
</div>
<%= render partial: "order_timeline_detail"%>