<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading clearfix">
        <p class="pull-left">
          Order list
        </p>
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover">
            <thead>
            <tr>
              <th>Order #</th>
              <th>Date</th>
              <th>Customer name</th>
              <th>Address</th>
              <th>Phone / Email</th>
              <th>Shipping notes</th>
              <th>Payment notes</th>
              <th>Items count</th>
              <th>Total amount</th>
              <th>Details</th>
            </tr>
            </thead>
            <tbody>
            <% @orders.each do |order| %>
                <tr>
                  <td><a href="<%= checkout_order_url(order) %>" target="_order"><%= order.id.to_s %></a></td>
                  <td><%= order.order_date.strftime("%d-%b-%Y") %></td>
                  <td><%= order.customer_name %></td>
                  <td>
                    <%= order.display_address %>
                  </td>
                  <td><%= order.address.mobile %> / <%= order.address.email %></td>
                  <td><%= order.address.additional_info %></td>
                  <td><%= order.payment_notes %></td>
                  <td><%= order.order_items.count %></td>
                  <td>â‚¹ <%= order.total_order_amount %></td>
                  <td class="text-center"><a class="btn btn-outline btn-success" href="<%= admin_order_show_path(order.id) %>">Details</a></td>
                </tr>
            <% end %>
            </tbody>
          </table>
        </div>
        <!-- /.table-responsive -->
      </div>
      <!-- /.panel-body -->
    </div>
    <!-- /.col-lg-12 -->
  </div>
</div>