.container.main-container{"ng-controller"=>"ProductListingController"}
  .morePost.row.featuredPostContainer.style2.globalePaddingTop
    %h3.section-title.style2.text-center
      %span FEATURED PRODUCTS
    .container
      .row.xsResponse

        .item.col-lg-3.col-md-3.col-sm-4.col-xs-6{"ng-repeat" => "product in featured_products"}
          .product
            -#%a.add-fav.tooltipHere{"data-toggle"=>"tooltip", "data-original-title"=>"Add to Wishlist", "data-placement"=>"left" }
            -#  %i.glyphicon.glyphicon-heart
            .image
              %a{:href=>"{{product.details_url}}"}
                %img.img-responsive{"ng-src" => "{{product.images[0].img_url}}", :alt=>"img"}
              .promotion
                %span.new-product New
            .description
              %h4 
                %a{:href=>"{{product.details_url}}"}
                  {{product.name}}
              %p {{product.description}}
              %span.size {{product.category.name}}
            .price
              %span {{product.price.currency}} {{product.price.amount}}
            .action-control
              %a.btn{"ng-click"=>"addToCart(product.id)", "ng-class" => "{true: 'btn-primary', false: 'btn-default disabled'}[product.in_stock]"}
                %span.add2cart
                  %i.glyphicon{"ng-class" => "{true: 'glyphicon-shopping-cart', false: ''}[product.in_stock]"}
                {{product.in_stock ? 'Add to cart' : 'Out of stock'}}
      .row{"ng-hide" => "isLastPage"}
        .load-more-block.text-center
          %a.btn.btn-thin{"ng-click"=>"loadNextPage()"}
            %i.fa.fa-plus-sign +
            load more products

  %hr.no-margin-top
